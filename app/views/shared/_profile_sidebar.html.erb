<div class="page-content">
<div class="container">
<div class="row">

<div class="col-xl-3 col-lg-3 theiaStickySidebar">
<div class="settings-widget dash-profile">
<div class="settings-menu">
<div class="profile-bg">
<div class="profile-img">
<%= image_tag current_user.avatar, alt: "User Image", class: "avatar-img rounded-circle" %>
</div>
</div>
<div class="profile-group">
<div class="profile-name text-center">
<h4><a href="instructor-profile.html"><%= current_user.email %></a></h4>
<p>Instructor</p>
</div>
</div>
</div>
</div>
<div class="settings-widget account-settings">
<div class="settings-menu">
<h3>Dashboard</h3>
<ul>
  <li class="nav-item">
    <%= link_to teacher_profile_path, class: "nav-link" do %>
      <i class="bi bi-person"></i>My Profile
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to teacher_course_path, class: "nav-link" do %>
      <i class="bi bi-sliders"></i>My Courses
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to teacher_assignment_path, class: "nav-link" do %>
      <i class="bi bi-list"></i>Assignments
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to teacher_quiz_path, class: "nav-link" do %>
      <i class="bi bi-question-circle"></i>Quizzes
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to teacher_announcement_path, class: "nav-link" do %>
      <i class="bi bi-question-circle"></i>Announcements
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to teacher_message_path, class: "nav-link" do %>
      <i class="bi bi-chat"></i>Messages
    <% end %>
  </li>
  <li class="nav-item">
    <%= link_to teacher_notification_path, class: "nav-link" do %>
      <i class="bi bi-bell"></i>Notifications
    <% end %>
  </li>
</ul>
<h3>Account Settings</h3>
<ul>
  <li class="nav-item">
    <a href="instructor-settings.html" class="nav-link ">
    <i class="bi bi-gear"></i>Settings
    </a>
  </li>
  <li class="nav-item">
    <%= button_to destroy_user_session_path, class: "btn btn-danger", method: :delete do %>
        <i class="bi bi-box-arrow-right"></i> Log out
    <% end %>
  </li>
</ul>
</div>
</div>
</div>